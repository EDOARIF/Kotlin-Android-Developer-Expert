<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_num"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="16dp"
                android:layout_height="50dp"

                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txt_team_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="10" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_team_name"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="80dp"
                android:layout_height="0dp"

                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"

                android:ellipsize="end"
                android:gravity="start|center"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_num"
                app:layout_constraintEnd_toStartOf="@+id/img_team_logo"
                app:layout_constraintStart_toEndOf="@+id/txt_num"
                app:layout_constraintTop_toTopOf="@+id/txt_num"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Barcelona123" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_team_logo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_home_green_400_24dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/txt_num"
                app:layout_constraintStart_toEndOf="@+id/txt_team_name"
                app:layout_constraintTop_toTopOf="@+id/txt_num" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_team_goals_against"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"

                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="14sp"

                app:layout_constraintBottom_toBottomOf="@+id/txt_num"
                app:layout_constraintEnd_toStartOf="@+id/txt_team_goals_difference"
                app:layout_constraintStart_toEndOf="@+id/img_team_logo"
                app:layout_constraintTop_toTopOf="@+id/txt_num"
                tools:text="100" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_team_goals_difference"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"

                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_num"
                app:layout_constraintEnd_toStartOf="@+id/txt_team_goals_for"
                app:layout_constraintStart_toEndOf="@+id/txt_team_goals_against"
                app:layout_constraintTop_toTopOf="@+id/txt_num"
                tools:text="98" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_team_goals_for"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="24dp"
                android:layout_height="0dp"

                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_num"
                app:layout_constraintEnd_toStartOf="@+id/txt_team_win"
                app:layout_constraintStart_toEndOf="@+id/txt_team_goals_difference"
                app:layout_constraintTop_toTopOf="@+id/txt_num"
                tools:text="97" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_team_win"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="24dp"
                android:layout_height="0dp"

                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_num"
                app:layout_constraintEnd_toStartOf="@+id/txt_team_loss"
                app:layout_constraintStart_toEndOf="@+id/txt_team_goals_for"
                app:layout_constraintTop_toTopOf="@+id/txt_num"
                tools:text="96" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_team_loss"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="24dp"
                android:layout_height="0dp"

                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_num"
                app:layout_constraintEnd_toStartOf="@+id/txt_team_draw"
                app:layout_constraintStart_toEndOf="@+id/txt_team_win"
                app:layout_constraintTop_toTopOf="@+id/txt_num"
                tools:text="97" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_team_draw"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="24dp"
                android:layout_height="0dp"

                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_num"
                app:layout_constraintEnd_toStartOf="@+id/txt_team_total"
                app:layout_constraintStart_toEndOf="@+id/txt_team_loss"
                app:layout_constraintTop_toTopOf="@+id/txt_num"
                tools:text="98" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_team_total"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="24dp"
                android:layout_height="0dp"

                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_num"
                app:layout_constraintEnd_toStartOf="@+id/txt_team_played"
                app:layout_constraintStart_toEndOf="@+id/txt_team_draw"
                app:layout_constraintTop_toTopOf="@+id/txt_num"
                tools:text="99" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_team_played"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="24dp"
                android:layout_height="0dp"

                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_num"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_team_total"
                app:layout_constraintTop_toTopOf="@+id/txt_num"
                tools:text="98" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
